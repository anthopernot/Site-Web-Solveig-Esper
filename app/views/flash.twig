{% for msg in flash('error') %}
    <div class="row mt-5">
        <div class="col-sm-4 mx-auto">
            <div class="alert alert-danger alert-dismissible fade show mt-4 mr-4 ml-4" role="alert">
                {{ msg }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
{% endfor %}
{% for msg in flash('success') %}
    <div class="row mt-5">
        <div class="col-sm-4 mx-auto">
            <div class="alert alert-success alert-dismissible fade show mt-4 ml-4 mr-4" role="alert">
                {{ msg }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
{% endfor %}