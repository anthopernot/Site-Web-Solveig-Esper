{% extends 'body.twig' %}

{% block title %}Work{% endblock %}


{% block content %}

        <div class="modal fade" id="modalFile" tabindex="-1" aria-labelledby="modalFileLabel" aria-hidden="true">
            <form action="{{ path_for('uploadFile') }}" method="post" enctype="multipart/form-data">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title font-weight-bold font-raleway" id="modalEmailLabel">UPLOAD FILE</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-row">
                                <div class="col-sm-12 text-center">
                                    <div class="wrapper">
                                        <video controls="controls" style="height: 100%; width: 100%" hidden>
                                            <source src="" id="video">
                                        </video>
                                        <div class="image" id="image">
                                            <img src="" alt="">
                                        </div>
                                        <div class="content" id="content">
                                            <div class="icon">
                                                <i class="fas fa-cloud-upload-alt"></i>
                                            </div>
                                            <div class="text">
                                                No file chosen, yet!
                                            </div>
                                        </div>
                                        <div id="cancel-btn">
                                            <i class="fas fa-times"></i>
                                        </div>
                                        <div class="file-name">
                                            File name here
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-sm-12 mb-3 mt-2 text-center">
                                    <button type="button" onclick="defaultBtnActive()" id="custom-btn" class="btn-dark input-send py-3" style="font-size: 20px">Choose a file</button>
                                    <input name="files" id="default-btn" type="file" hidden>
                                </div>
                            </div>
                            <div class="form-row text-center">
                                <div class="col-sm-12 mb-3 text-center">
                                    <label for="name">Name</label>
                                    <input type="text" name="name" class="input-custom text-center" id="name">
                                </div>
                            </div>
                            <div class="form-row text-center">
                                <div class="col-sm-12 mb-3 text-center">
                                    <label for="textarea">
                                        Description
                                    </label>
                                    <textarea name="descr" id="textarea" class="input-custom text-center"></textarea>
                                </div>
                            </div>
                        </div>

                        {{ csrf() | raw }}

                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-dark font-weight-bold" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-dark font-weight-bold">Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="container about-custom" id="container">

            <div class="row mb-4">
                <div class="col-sm-12 mx-auto text-center font-weight-bold">
                    <div class="title-custom">WORK</div>
                </div>
            </div>

            {% if auth.check == true %}
                <div class="col-sm-12 mx-auto mb-5 text-center">
                    <button type="button" class="btn btn-lg btn-outline-dark font-weight-bold" data-toggle="modal" data-target="#modalFile">ADD FILE</button>
                </div>
            {% endif %}

        </div>

        <div class="row mb-4 mt-5 mx-auto">
                <div class="col-sm-5 mt-5 mx-auto">
                        {% for file in files1 %}
                            <div id="col-imgAlea">
                                {% if file.type == 'image' %}
                                        <div id="imgAlea" data-toggle="modal" data-target="#modalApercu">
                                            <img id="mediaWork" class="hover-shadow" src="{{ base_url() }}/uploads/{{ file.path }}" style="max-width: 65%; max-height: 400px" data-id="{{ file.id }}" alt="">
                                        </div>
                                {% elseif file.type == 'video' %}
                                        <div id="imgAlea" data-toggle="modal" data-target="#modalApercu">
                                            <video id="mediaWork" class="hover-shadow" controls="controls" style="max-width: 65%; max-height: 400px; height: 100%; width: 100%" data-id="{{ file.id }}">
                                                <source src="{{ base_url() }}/uploads/{{ file.path }}" id="video">
                                            </video>
                                        </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                </div>
                <div class="col-sm-5 mt-5 mx-auto" id="col2">
                    {% for file in files2 %}
                        <div id="col-imgAlea">
                            {% if file.type == 'image' %}
                                    <div id="imgAlea" data-toggle="modal" data-target="#modalApercu">
                                        <img id="mediaWork2" class="hover-shadow" src="{{ base_url() }}/uploads/{{ file.path }}" style="max-width: 65%; max-height: 400px" data-id="{{ file.id }}" alt="">
                                    </div>
                            {% elseif file.type == 'video' %}
                                    <div id="imgAlea" data-toggle="modal" data-target="#modalApercu">
                                        <video id="mediaWork2" class="hover-shadow" controls="controls" style="max-width: 65%; max-height: 400px; height: 100%; width: 100%" data-id="{{ file.id }}">
                                            <source src="{{ base_url() }}/uploads/{{ file.path }}" id="video">
                                        </video>
                                    </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
        </div>

        <div class="modal fade" id="modalApercu" tabindex="-1" aria-labelledby="modalApercuLabel" aria-hidden="true" style="width: 100%; height: 100%">
            <div class="modal-dialog modal-dialog-centered" >
                <div class="modal-content" id="modalContent">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-header mx-auto">
                        <a class="carousel-control-prev" id="btn-prev" href="#carouselApercu" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="false"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" id="btn-next" href="#carouselApercu" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="modal-body">
                        <div id="carouselApercu" class="carousel slide" data-ride="carousel">

                            <div class="carousel-inner" id="bodyCrsl"></div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalUpdate" tabindex="-1" aria-labelledby="modalUpdateLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h6 id="titleCarouselUpdate"></h6>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="{{ path_for('updateMedia') }}" method="post">
                            <input type="text" name="id" id="idUpdate" hidden>
                            <div class="form-row text-center">
                                <div class="col-sm-12 mb-3 text-center">
                                    <label for="name">Name</label>
                                    <input type="text" name="name" class="input-custom text-center" id="nameUpdate">
                                </div>
                            </div>
                            <div class="form-row text-center">
                                <div class="col-sm-12 mb-3 text-center">
                                    <label for="textarea">
                                        Description
                                    </label>
                                    <textarea name="descr" id="textareaUpdate" class="input-custom text-center"></textarea>
                                </div>
                            </div>

                            {{ csrf() | raw }}

                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-dark font-weight-bold" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-dark font-weight-bold">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalDelete" tabindex="-1" aria-labelledby="modalApercuLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h6 id="titleCarouselDelete"></h6>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="{{ path_for('deleteMedia') }}" method="post">
                            <input type="text" name="id" id="idDelete" hidden>

                            <h4 class="text-center">
                                Are you sure to delete this media ?
                            </h4>

                            {{ csrf() | raw }}

                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-dark font-weight-bold" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-danger font-weight-bold">Delete</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}

{% block scripts %}
    <script src="{{ base_url() }}/public/js/work.js"></script>
    <script>
        var baseUrl = "{{ base_url() }}";
        var getFileUrl = "{{ path_for('getFile') }}";
        var session = "{{ auth.check == true }}";
    </script>
{% endblock %}